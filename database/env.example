# ===========================================
# DATABASE ENVIRONMENT CONFIGURATION
# ===========================================

# ===========================================
# POSTGRESQL CONFIGURATION
# ===========================================
# Database name
POSTGRES_DB=ideafactory_db

# Database user
POSTGRES_USER=postgres

# Database password (change this in production!)
POSTGRES_PASSWORD=your_secure_password

# ===========================================
# DATABASE CONNECTION CONFIGURATION
# ===========================================
# Database host (usually localhost for standalone DB server)
POSTGRES_HOST=localhost

# Database port
POSTGRES_PORT=5432

# ===========================================
# DATABASE SECURITY CONFIGURATION
# ===========================================
# Enable SSL (recommended for production)
POSTGRES_SSL_MODE=require

# Connection pool size
POSTGRES_MAX_CONNECTIONS=100

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
# Backup directory
POSTGRES_BACKUP_DIR=/var/lib/postgresql/backups

# Backup retention days
POSTGRES_BACKUP_RETENTION_DAYS=30 